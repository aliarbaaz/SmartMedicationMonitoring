<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Medication"
            android:fontFamily="@font/opensans_bold"
            android:textSize="32sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@drawable/sih"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="stay on top of your \nhealth with real-time updates"
            android:textSize="24sp"
            android:fontFamily="@font/opensans_semibold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated: "
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/refresh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/refresh"
            android:foregroundGravity="right"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@id/description"
            app:layout_constraintTop_toBottomOf="@id/description"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/heart_beat_card"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardBackgroundColor="#33D2416E"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/time"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/heart_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/heart_rate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart Rate"
                android:textSize="24sp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="#D2416E"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"/>

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="16dp">
                <TextView
                    android:id="@+id/heart_beat_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="78"
                    android:fontFamily="@font/opensans_bold"
                    android:textColor="#D2416E"
                    android:textSize="62sp"/>
                <TextView
                    android:id="@+id/heart_beat_units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:text="bpm"
                    android:fontFamily="@font/opensans_bold"
                    android:textColor="#D2416E"
                    android:textSize="32sp"/>
            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/temperature_card"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardBackgroundColor="#33197BD2"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintTop_toBottomOf="@id/heart_beat_card"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/temperature_image"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/temperature"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textSize="24sp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="#197BD2"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"/>

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="16dp">
                <TextView
                    android:id="@+id/temperature_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="97"
                    android:fontFamily="@font/opensans_bold"
                    android:textColor="#197BD2"
                    android:textSize="62sp"/>
                <TextView
                    android:id="@+id/temperature_units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_gravity="bottom|end"
                    android:text="C"
                    android:textColor="#197BD2"
                    android:textSize="32sp" />
            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/medicine_card"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardBackgroundColor="#330DB1AD"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintTop_toBottomOf="@id/temperature_card"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/medicine_image"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/pills"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicines"
                android:textSize="24sp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="#0DB1AD"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/medicine_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="52dp"
                android:layout_marginBottom="4dp"
                android:text="Good"
                android:fontFamily="@font/opensans_bold"
                android:textColor="#0DB1AD"
                android:textSize="42sp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/emergency_card"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardBackgroundColor="#33FF0000"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintTop_toBottomOf="@id/medicine_card"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/emergency_image"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/emergency_call"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:textSize="24sp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="#FF0000"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/emergency_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="52dp"
                android:layout_marginBottom="4dp"
                android:text="N/A"
                android:fontFamily="@font/opensans_bold"
                android:textColor="#FF0000"
                android:textSize="42sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/box_level_card"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardBackgroundColor="#337042C9"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="48dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintTop_toBottomOf="@id/emergency_card"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/box_level_image"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/medicine_box"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Box Level"
                android:textSize="24sp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="#7042C9"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/box_level_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="52dp"
                android:layout_marginBottom="4dp"
                android:text="N/A"
                android:fontFamily="@font/opensans_bold"
                android:textColor="#7042C9"
                android:textSize="42sp"/>
        </androidx.cardview.widget.CardView>

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/box_level_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
